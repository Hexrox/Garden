# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Garden App Backend - Environment Variables
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server Port
PORT=3001

# Environment (development or production)
NODE_ENV=development

# JWT Secret - CRITICAL: Change this in production!
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-MUST-BE-RANDOM
JWT_EXPIRES_IN=7d

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CORS - Frontend URL(s)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# IMPORTANT: This MUST match your frontend domain in production!
#
# For local development:
FRONTEND_URL=http://localhost:3000
#
# For production (single domain):
# FRONTEND_URL=https://gardenapp.pl
#
# For production (multiple domains - comma separated):
# FRONTEND_URL=https://gardenapp.pl,https://www.gardenapp.pl
#
# ⚠️  COMMON MISTAKE: If you see "Ładowanie..." forever on production,
#     check that FRONTEND_URL is set to your production domain!
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# OpenWeatherMap API Key (optional - for weather features)
# Get your free key at: https://openweathermap.org/api
# Free tier: 1000 calls/day
# Leave empty to disable weather features
OPENWEATHER_API_KEY=your_api_key_here

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Email Configuration (for password reset & verification)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# REQUIRED for password reset and email verification features
#
# How to get Gmail App Password:
# 1. Enable 2-Step Verification: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Select "Mail" and "Other (Custom name)" → "Garden App Server"
# 4. Copy the 16-character password (no spaces)
#
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-char-app-password

# BCRYPT Rounds (optional - defaults to 12)
# Higher = more secure but slower (10-14 recommended)
BCRYPT_ROUNDS=12
